# .env.example
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# ===========================================
# CONFIGURAÇÕES DA API
# ===========================================

# URL base da API do WhatsApp
# Desenvolvimento local:
REACT_APP_API_URL=http://localhost:3000

# Produção (exemplo):
# REACT_APP_API_URL=https://api.seudominio.com

# Staging (exemplo):
# REACT_APP_API_URL=https://api-staging.seudominio.com

# ===========================================
# CONFIGURAÇÕES DE AMBIENTE
# ===========================================

# Ambiente da aplicação
NODE_ENV=development

# Porta do servidor de desenvolvimento (opcional)
PORT=3001

# ===========================================
# CONFIGURAÇÕES DE DEBUG
# ===========================================

# Habilitar logs de debug da API
REACT_APP_DEBUG_API=true

# Habilitar logs detalhados no console
REACT_APP_VERBOSE_LOGGING=false

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================

# Chave da API (se necessário)
# REACT_APP_API_KEY=sua-chave-aqui

# ===========================================
# CONFIGURAÇÕES OPCIONAIS
# ===========================================

# Timeout padrão para requisições (em ms)
REACT_APP_API_TIMEOUT=30000

# Intervalo de polling para status de conexão (em ms)
REACT_APP_POLLING_INTERVAL=2000

# URL do webhook padrão (para testes)
REACT_APP_DEFAULT_WEBHOOK_URL=https://webhook.site/sua-url-aqui

# ===========================================
# EXEMPLOS DE CONFIGURAÇÃO POR AMBIENTE
# ===========================================

# ===== DESENVOLVIMENTO LOCAL =====
# REACT_APP_API_URL=http://localhost:3000
# NODE_ENV=development
# REACT_APP_DEBUG_API=true

# ===== STAGING/HOMOLOGAÇÃO =====
# REACT_APP_API_URL=https://api-staging.empresa.com
# NODE_ENV=staging
# REACT_APP_DEBUG_API=true

# ===== PRODUÇÃO =====
# REACT_APP_API_URL=https://api.empresa.com
# NODE_ENV=production
# REACT_APP_DEBUG_API=false